<tr>
  <td>
    <%= image_tag line_item.product.image.tiny %>
  </td>
  <td>
    <h4><%= line_item.product.name %></h4>
    <br>
    <%= line_item.product.description %>
  </td>
  <td>
    &#36;<%= line_item.product.price %>
  </td>
  <td>
    <%= line_item.quantity.to_i %>
  </td>
  <td>
    &#36;<%= line_item.product.price * line_item.quantity.to_i %>
  </td>
</tr>